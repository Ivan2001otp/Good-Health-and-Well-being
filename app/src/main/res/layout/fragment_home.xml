<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1A1A19"
    tools:context=".FragmentsHub.HomeFragment">


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:backgroundTint="#37AEAEAF"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"

            android:layout_marginStart="18dp"
            android:layout_height="195dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="Steps"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                android:padding="3dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/step_counter_iv"
                android:layout_width="110dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:src="@drawable/step_counter"
                android:layout_marginTop="4dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:backgroundTint="#37AEAEAF"
            app:cardElevation="3dp"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="25dp"
            android:layout_height="195dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="Heart Rate"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                android:padding="3dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/heart_rate_iv"
                android:layout_width="110dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:src="@drawable/heart_rate"

                />


        </androidx.cardview.widget.CardView>
        
        

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/lv2"
        android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lv1"
        android:layout_marginTop="15dp"
        android:backgroundTint="#37AEAEAF"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="3dp"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:text='@string/tutorialText'
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_marginStart="6dp"
            android:padding="3dp"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:id="@+id/yoga_animation"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/yoga_anim"
            app:lottie_loop="true"
            android:layout_marginTop="10dp"
            />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:orientation="horizontal"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lv2"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:backgroundTint="#37AEAEAF"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:layout_marginStart="18dp"
            android:layout_height="195dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="Calories"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                android:padding="3dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/calorie_tracker_iv"
                android:layout_width="109dp"
                android:layout_height="104dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:src="@drawable/calorie_tracker" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:backgroundTint="#37AEAEAF"
            app:cardCornerRadius="15dp"

            android:layout_marginStart="25dp"
            app:cardElevation="3dp"
            android:layout_height="195dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="Sleep"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                android:padding="3dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/step_counter_cv"
                android:layout_width="110dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:src="@drawable/sleep_traker"
                android:layout_marginTop="4dp"
                />

        </androidx.cardview.widget.CardView>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>